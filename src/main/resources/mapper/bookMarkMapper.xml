<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.zerobase.wifi.mapper.BookMarkMapper">

    <!--북마크 저장-->
    <insert id="insertBookMark" parameterType="Map">
        insert into bookmarks (name, no) values (#{name}, #{no});
    </insert>

    <select id="getBookMarkList" resultType="BookMarkDTO">
        select * from bookmarks
    </select>

    <update id="updateBookMark" parameterType="map">
        update bookmarks set name=#{name}, no=#{no}
        where id =#{id}
    </update>

    <delete id="deleteBookMark" parameterType="long">
        delete from bookmarks where id=#{id}
    </delete>

</mapper>