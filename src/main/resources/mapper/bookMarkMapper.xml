<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.zerobase.wifi.mapper.BookMarkMapper">

    <!--상세 정보-->
    <select id="getDetail" parameterType="string" resultType="wifiDTO">
        select * from wifiAPI where mgr_no=#{mgr_no}
    </select>

    <!--북마크 저장-->
    <insert id="insertBookMark" parameterType="Map">
        insert into bookMarkGroup (bookMarkName, no) values (#{bookMarkName}, #{no});
    </insert>

    <!--북마크 목록-->
    <select id="getBookMarkList" resultType="BookMarkGroupDTO">
        select * from bookMarkGroup
        order by no
    </select>

    <!--북마크 수정-->
    <update id="updateBookMark" parameterType="map">
        update bookMarkGroup set bookMarkName=#{bookMarkName}, no=#{no}
        where id =#{id}
    </update>

    <!--북마크 삭제-->
    <delete id="deleteBookMarkGroup" parameterType="long">
        delete from bookMarkGroup where id=#{id}
    </delete>

    <!--순서-->
    <select id="getNo" parameterType="string" resultType="int">
        select no from BookMarkGroup where bookMarkName=#{bookMarkName}
    </select>

    <!--북마크 등록-->
    <insert id="addBookMark" parameterType="map">
        insert into bookmark (bookMarkName, no, wifi_name) values (#{bookMarkName}, #{no}, #{wifi_name});
    </insert>

    <!--등록한 북마크 목록-->
    <select id="getBookMark" resultType="bookMarkDTO">
        select id, bookMarkName, wifi_name, date from bookmark
    </select>

    <!--등록한 북마크 삭제-->
    <delete id="deleteBookMark" parameterType="long">
        delete from bookMark where id=#{id}
    </delete>


</mapper>